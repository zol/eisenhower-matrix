<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Star</th>
    <th>Importance</th>
    <th>Urgency</th>
    <th>Position</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%=h task.title %></td>
    <td><%=h task.star %></td>
    <td><%=h task.importance %></td>
    <td><%=h task.urgency %></td>
    <td><%=h task.position %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>